{{!
@template mod_interactivevideo/reporttable
Report table.
Example context (json):
    {
    }
}}

<div id="reporttable" class="p-3" style="margin-top: 70px;">
{{{groupselector}}}
<table id="completiontable" class="table table-sm table-bordered table-striped w-100">
    <thead class="sticky-top bg-white">
        <tr>
            <th id="id">{{#str}}id,mod_interactivevideo{{/str}}</th>
            <th id="participant" class="bg-white sticky-left-0">{{#str}}participant,mod_interactivevideo{{/str}}</th>
            <th id="firstname">{{#str}}firstname{{/str}}</th>
            <th id="lastname">{{#str}}lastname{{/str}}</th>
            <th id="email">{{#str}}email{{/str}}</th>
            <th id="timecreated">{{#str}}timestarted,mod_interactivevideo{{/str}}</th>
            <th id="timecompleted">{{#str}}timecompleted,mod_interactivevideo{{/str}}</th>
            <th id="completionpercentage">{{#str}}completionpercentage,mod_interactivevideo{{/str}}</th>
            <th id="xp">{{#str}}xp,mod_interactivevideo{{/str}}/{{totalxp}}</th>
            {{#items}}
                <th class="rotate" id="item-{{id}}" data-item="{{id}}" data-type="{{type}}">
                    <div>
                        <i title="{{typetitle}}" class="fa-fw fa mx-1 {{icon}}"></i>
                        <a href="javascript:void(0)" data-toggle="tooltip" data-trigger="focus" data-title="{{title}}">
                            {{title}}
                        </a>
                    </div>
                </th>
            {{/items}}
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>
</div>
