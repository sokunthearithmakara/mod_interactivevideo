<div id="interactivevideo-container"
    class="container-fluid {{#darkmode}}p-sm-3{{/darkmode}} {{^darkmode}}p-sm-3{{/darkmode}} alternative"
    data-noskip="{{displayoptions.preventskipping}}"
    data-duntilcomplete="{{displayoptions.disableinteractionclickuntilcompleted}}"
    data-dc="{{displayoptions.disableinteractionclick}}" data-noseek="{{displayoptions.preventseeking}}">
    <div class="row justify-content-center mx-0">
        <div class="col-lg-12 col-xl-8 px-0">
            <div id="wrapper" class="position-relative">
                <div id="video-wrapper" class="d-flex align-items-center justify-content-center bg-dark">
                    {{#displayoptions.hidemainvideocontrols}}
                    <span
                        class="rotatex-360 btn border-0 btn-sm btn-control btn-secondary rounded-circle position-absolute"
                        id="fullscreen" data-toggle="tooltip" data-trigger="hover"
                        title="{{#str}}togglefullscreen,mod_interactivevideo{{/str}}"><i
                            class="fa fa-expand"></i></span>
                    {{/displayoptions.hidemainvideocontrols}}
                    {{! Toast }}
                    <div id="toast" style="z-index:1090; top: 5px;"
                        class="toast mx-auto toast-warning fade position-fixed" role="alert" aria-live="assertive"
                        aria-atomic="true" data-delay="3000">
                        <div class="toast-body">
                            {{#str}}youmustcompletethepreviousactivity,mod_interactivevideo{{/str}}
                        </div>
                    </div>
                    {{^displayoptions.disablechapternavigation}}
                    <div id="chapter-container-left" class="d-none sticky-top position-absolute w-100 h-100">
                        <div data-region="chapterwrapper"
                            class="d-flex w-100 position-absolute h-100 flex-column border shadow">
                            <div class="w-100 p-3 d-flex flex-column">
                                <button id="closechapter"
                                    class="btn btn-small rounded-circle p-0 bg-secondary border-0"><i
                                        class="fa fa-times"></i></button>
                                <div class="metadata"></div>
                                <h4 class="mt-2 mb-0 text-truncate">{{{title}}}</h4>
                            </div>
                            <ul data-region="chapterlists" class="list-group w-100 rounded-0"></ul>
                        </div>
                    </div>
                    {{/displayoptions.disablechapternavigation}}
                    {{^displayoptions.useoriginalvideocontrols}}
                    <div class="w-100 position-absolute video-block d-flex align-items-center justify-content-center bottom-0"
                        style="background: #fff">

                    </div>
                    {{/displayoptions.useoriginalvideocontrols}}

                    {{#displayasstartscreen}}
                    <div id="start-screen" class="w-100 position-absolute h-100 bg-white bottom-0">
                        <div
                            class="intro-content {{#hasintro}}hasintro bg-white{{/hasintro}} w-100 p-0 align-items-start">
                            <div class="bg-light w-100 d-flex align-items-center justify-content-between p-3 overflow-hidden">
                                <div class="d-flex flex-column justify-content-center">
                                    <div class="metadata d-block d-md-none"></div>
                                    <h2 class="line-height-100 mb-0">{{{title}}}</h2>
                                </div>
                                <div id="spinner" class="spinner-grow text-secondary" style="width: 3rem; height: 3rem;"
                                    role="status">
                                    <span class="sr-only">Loading...</span>
                                </div>
                                <button class="btn rounded-circle d-none" id="play"
                                    style="right: 2rem; top: 1rem;"><i class="bi bi-play-circle-fill text-danger"
                                        style="font-size: xxx-large;"></i></button>
                            </div>

                            {{#hasintro}}<div class="p-2 p-md-3">{{{intro}}}</div>{{/hasintro}}

                        </div>
                    </div>
                    {{/displayasstartscreen}}

                    {{^displayasstartscreen}}
                    <div id="start-screen"
                        class="w-100 position-absolute h-100 {{^html5}}bg-transparent{{/html5}} bottom-0"
                        style="background: rgba(255, 255, 255, 0.2);">
                        <div class="intro-content d-flex align-items-center justify-content-center position-absolute w-100"
                            style="z-index: 3;">
                            <div id="spinner" class="spinner-grow text-secondary" style="width: 3rem; height: 3rem;"
                                role="status">
                                <span class="sr-only">Loading...</span>
                            </div>
                        </div>
                        <div id="video-info"
                            class="p-3 text-white w-100 h-100 position-absolute align-items-start flex-column justify-content-between d-none"
                            style="z-index: 4; background: linear-gradient(135deg, black, transparent);">
                            <div class="mb-2 d-flex flex-column">
                                <div class="metadata d-block d-md-none"></div>
                                <h1 class="text-white font-weight-bold line-height-100">{{{title}}}</h1>
                            </div>
                            <button class="btn bg-white rounded-circle d-none position-absolute" id="play"
                                style="top: calc(50% - 25px); left: calc(50% - 25px);"><i
                                    class="bi bi-play-circle-fill text-danger"
                                    style="font-size: xxx-large;"></i></button>
                        </div>
                    </div>
                    {{/displayasstartscreen}}
                    <div id="end-screen" class="w-100 position-absolute h-100 bg-white d-none bottom-0">
                        <div
                            class="end-content {{#hasendscreentext}}hascontent w-100 p-0 align-items-start{{/hasendscreentext}}">
                            {{#hasendscreentext}}
                            <div class="bg-light w-100 d-flex align-items-center justify-content-between p-3 overflow-hidden">
                                <div class="d-flex flex-column justify-content-center">
                                    <div class="metadata d-block d-md-none"></div>
                                    <h1 class="line-height-100 mb-0">{{{title}}}</h1>
                                </div>

                                <button class="btn btn-danger rounded-circle" id="restart"
                                    style="right: 2rem; top: 1rem;"><i class="bi bi-arrow-repeat"
                                        style="font-size: x-large;"></i></button>
                            </div>
                            <div class="p-2 p-md-3">
                                {{{endscreentext}}}
                            </div>
                            {{/hasendscreentext}}
                            {{^hasendscreentext}}
                            <button class="btn btn-danger rounded-circle" id="restart"><i class="bi bi-arrow-repeat"
                                    style="font-size: x-large;"></i></button>
                            {{/hasendscreentext}}
                        </div>
                    </div>
                    {{#html5}}<video id="player"></video>{{/html5}}
                    {{^html5}}<div id="player" class="p-0"></div>{{/html5}}

                </div>
                {{^displayoptions.hidemainvideocontrols}}
                <div class="rounded-lg w-100 mt-0 mt-md-2 bg-dark d-flex flex-column p-0 justify-content-center"
                    id="controler" style="height:55px">
                    <div id="taskinfo" class="d-flex align-items-center justify-content-end w-100 px-3 bg-transparent">
                        <div id="video-nav"
                            class="bg-gray rounded-lg align-items-center {{^darkmode}}mb-1{{/darkmode}} {{#darkmode}}mb-2{{/darkmode}} mt-2">
                            <ul></ul>
                            <div id="progress" class="bg-danger"></div>
                            <div id="seek" class="w-100 position-absolute rounded"></div>
                        </div>
                    </div>
                    <div class="w-100 px-2 d-flex align-items-center justify-content-between">
                        <div class="d-flex align-items-center">
                            <span data-toggle="tooltip" data-trigger="hover" role="button"
                                title="{{#str}}play, mod_interactivevideo{{/str}}" id="playpause"
                                class="btn border-0 btn-sm btn-control text-white bg-transparent py-0 px-0 mr-1">
                                <i class="bi bi-play-fill fs-25px"></i>
                            </span>
                            {{^displayoptions.disablechapternavigation}}
                            <div id="chaptertoggle">
                                <span data-toggle="tooltip" data-trigger="focus"
                                    title="{{#str}}togglechapter, mod_interactivevideo{{/str}}"
                                    class="btn border-0 btn-sm btn-control text-white bg-transparent py-0 px-1 "
                                    id="chapterbutton"><i class="bi bi-collection"></i></span>
                            </div>
                            {{/displayoptions.disablechapternavigation}}
                            <span class="text-white ml-2" id="currenttime">00:00</span><span
                                class="text-white mx-1">/</span>
                            <span class="text-white" id="duration">--:--</span>
                        </div>
                        <div class="d-flex align-items-center">
                            <span id="mute"
                                class="btn border-0 btn-sm btn-control text-white bg-transparent py-0 px-1 mx-1"
                                data-toggle="tooltip" data-trigger="focus"
                                title="{{#str}}mute,mod_interactivevideo{{/str}}"><i class="bi bi-volume-up"></i></span>
                            <span class="btn border-0 btn-sm btn-control text-white py-0 px-1 mx-1" id="share"
                                data-toggle="tooltip" data-trigger="focus"
                                title="{{#str}}sharethismoment,mod_interactivevideo{{/str}}"><i
                                    class="bi bi-share"></i></span>
                            <span class="btn border-0 btn-sm btn-control text-white py-0 px-1 mx-1" id="fullscreen"
                                data-toggle="tooltip" data-trigger="focus"
                                title="{{#str}}togglefullscreen,mod_interactivevideo{{/str}}"><i
                                    class="bi bi-fullscreen"></i></span>
                        </div>
                    </div>
                </div>
                {{/displayoptions.hidemainvideocontrols}}
            </div>
            {{! Content }}
            <div id="annotation-content" class="bg-white w-100 position-relative mt-3 overflow-hidden border-0"></div>
        </div>
        {{^displayoptions.disablechapternavigation}}
        <div class="d-none col-lg-12 col-xl-4 mb-3 overflow-hidden" id="chapter-container-right">
            <div data-region="chapterwrapper"
                class="d-flex position-absolute h-100 flex-column {{^darkmode}}border{{/darkmode}} rounded-lg"
                style="width: calc(100% - 15px);">
                <div class="w-100 p-3 d-flex flex-column">
                    <div class="metadata"></div>
                    <h4 class="mt-2 mb-0 text-truncate">{{{title}}}</h4>
                </div>
                <ul data-region="chapterlists" class="list-group w-100 rounded-0"></ul>
            </div>
        </div>
        {{/displayoptions.disablechapternavigation}}
    </div>
</div>