         aria-valuemin="0"
         aria-valuemax="100"></div>
</div>
<div class="task-percentage d-flex justify-content-between mt-1">
    <small class="d-flex align-items-center"
           title="{{#str}}taskscompleted,interactivevideo{{/str}}"><i class="fa fa-bullseye mr-1"></i><span class="percentage">{{usercompletion.completionpercentage}}</span>%<span class="items ml-1">({{completeditems}}/{{totalitems}})</span></small>
    {{^noxp}}
    <small class="d-flex align-items-center"
           title="{{#str}}xpcompleted,interactivevideo{{/str}}"><i class="fa fa-star mr-1"></i><span class="xp">{{usercompletion.xp}}</span>/{{totalxp}}</small>
{{/noxp}}
</div>
{{/noitems}}
{{#completion}}
<div class="small mt-3 {{^showcompletion}}d-none{{/showcompletion}}">{{{completion}}}</div>
{{/completion}}
</div>
</div>
<div class="description-container w-auto">
    {{#showname}}
    {{#cm.uservisible}}
    <a href="{{baseurl}}/mod/interactivevideo/view.php?i={{cm.instance}}"
