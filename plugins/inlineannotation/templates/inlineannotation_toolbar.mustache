@template mod_interactivevideo/inlineannotation_toolbar

Toolbar for inline annotations.

Example context (json):
{
}
}}
<div id="inlineannotation-btns" data-id="{{id}}" class="">
    <div id="save-close" class="d-flex align-items-center"><button class="btn btn-sm rounded-0 text-primary" id="save"
            title="{{#str}}save,mod_interactivevideo{{/str}}"><i class="bi bi-floppy"></i></button><button
            class="btn btn-sm rounded-0" id="close" title="{{#str}}close,mod_interactivevideo{{/str}}"><i
                class="bi bi-x-lg"></i></button></div>
    <div id="edit-btns" data-active="5" class="align-items-center d-none">
        <span class="btn-sm rounded-0 mr-1 small d-none d-lg-flex" id="position" title="Position"></span>
        <button class="btn btn-sm rounded-0" id="up" title="{{#str}}layer-up,mod_interactivevideo{{/str}}"><i
                class="bi bi-arrow-bar-up"></i></button>
        <button class="btn btn-sm rounded-0" id="down" title="{{#str}}layer-down,mod_interactivevideo{{/str}}"><i
                class="bi bi-arrow-bar-down"></i></button>
        <button class="btn btn-sm rounded-0" id="edit" title="{{#str}}edit,mod_interactivevideo{{/str}}"><i
                class="bi bi-pencil-square"></i></button>
        <button class="btn btn-sm rounded-0" id="copy" title="{{#str}}clone,mod_interactivevideo{{/str}}"><i
                class="bi bi-copy"></i></button>
        <button class="btn btn-sm rounded-0 text-danger" id="delete"
            title="{{#str}}delete,mod_interactivevideo{{/str}}"><i class="bi bi-trash3"></i></button>
    </div>
    <div class="d-flex align-items-center">
        {{#items}}
        <button class="btn btn-sm rounded-0 add-ia" title="{{label}}" data-type="{{type}}"
            data-mediatype="{{mediatype}}"><i class="{{icon}}"></i></button>
        {{/items}}
    </div>
</div>